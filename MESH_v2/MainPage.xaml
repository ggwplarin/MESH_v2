<Page
    x:Class="MESH_v2.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:MESH_v2"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <Grid>
        <Button x:Name="goAdmin" Content="goAdmin"  Click="goAdmin_Click"/>
        <TextBox x:Name="gg"  Width="400" HorizontalAlignment="Center" VerticalAlignment="Bottom"/>

        <Grid HorizontalAlignment="Center" VerticalAlignment="Center">
            <StackPanel>
                <TextBox x:Name="LoginMenuLoginBox" Header="Login" Width="200" Margin="8"/>
                <PasswordBox x:Name="LoginMenuPasswordBox" Header="Password" Width="200" Margin="8"/>
                <Button x:Name="LoginMenuConfirmBtn" Click="LoginMenuConfirmBtn_Click" Content="Confirm" Width="200" Margin="8"/>
            </StackPanel>
        </Grid>
    </Grid>
</Page>
